<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme using Material Design 3 -->
    <style name="Base.Theme.VisitorManagement" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_red</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.VisitorManagement" parent="Base.Theme.VisitorManagement" />

    <!-- Base Text Appearance -->
    <style name="TextAppearance.App" parent="TextAppearance.Material3.BodyMedium" />

    <!-- Text Appearances -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Base Widget Style -->
    <style name="Widget.App" parent="android:Widget" />

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/primary_dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.Accent" parent="Widget.App.Button">
        <item name="backgroundTint">@color/accent_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary_dark_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_dark_blue</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_dark_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/error_red</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Large Card Button for Main Screen -->
    <style name="Widget.App.CardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="rippleColor">@color/overlay_light</item>
    </style>

    <!-- Section Header Style -->
    <style name="TextAppearance.App.SectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Dialog Style -->
    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_dark_blue</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title</item>
    </style>

    <style name="MaterialAlertDialog.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Signature View Style -->
    <style name="SignatureViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>
