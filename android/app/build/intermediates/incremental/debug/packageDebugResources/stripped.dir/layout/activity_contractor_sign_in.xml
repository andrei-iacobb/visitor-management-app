<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contractor Sign-In"
        android:textSize="28sp"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Back"
        android:textColor="@color/primary_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Step 1: Company Name -->
    <LinearLayout
        android:id="@+id/step1Container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 1: Enter Your Company Name"
            android:textSize="20sp"
            android:textColor="@color/primary_dark_blue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCompanyStep1"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            app:boxStrokeColor="@color/primary_dark_blue"
            app:errorEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/etCompanyStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="18sp"
                android:completionThreshold="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNextStep1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Next →"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_dark_blue"
            android:layout_marginTop="24dp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Step 2: Contractor Selection -->
    <ScrollView
        android:id="@+id/step2Container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 2: Select Your Name"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_blue"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvCompanyNameStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your name:"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="24dp" />

            <!-- Container for contractor buttons (dynamically added in grid) -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/contractorButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="stretch" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackStep2"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="← Back"
                android:textColor="@color/primary_dark_blue"
                app:strokeColor="@color/primary_dark_blue"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Step 3: Additional Information -->
    <ScrollView
        android:id="@+id/step3Container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 3: Additional Information"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_blue"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvSelectedContractorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contractor: "
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp" />

            <!-- Two Column Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="12dp">

                    <!-- Phone Number (Required) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Phone Number *"
                        app:boxStrokeColor="@color/primary_dark_blue"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Purpose of Visit (Required) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPurpose"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Purpose of Visit *"
                        app:boxStrokeColor="@color/primary_dark_blue"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPurpose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <!-- Car Registration (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCarReg"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Car Registration (Optional)"
                        app:boxStrokeColor="@color/primary_dark_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCarReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email (Optional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Email (Optional)"
                        app:boxStrokeColor="@color/primary_dark_blue"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Required fields"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackStep3"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="← Back"
                    android:textColor="@color/primary_dark_blue"
                    app:strokeColor="@color/primary_dark_blue"
                    android:layout_marginEnd="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmitStep3"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="2"
                    android:text="✓ COMPLETE SIGN-IN"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/accent_red"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading Progress -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        app:indicatorColor="@color/primary_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
