<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_keys_title"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:textColor="@color/primary_dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Vehicle Status -->
        <TextView
            android:id="@+id/tvVehicleStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_reg_prompt"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Vehicle Registration Input Container -->
        <LinearLayout
            android:id="@+id/llRegInputContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tvVehicleStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Vehicle Registration -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilVehicleReg"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:hint="@string/label_vehicle_registration"
                app:boxStrokeColor="@color/primary_dark_blue"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVehicleReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAllCaps="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Lookup Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookupVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_lookup_vehicle"
                android:textSize="14sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Checkout Form (Initially Hidden) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCheckoutForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llRegInputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCheckoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_checkout_title"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Company Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCompanyName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/label_company_name"
                app:boxStrokeColor="@color/primary_dark_blue"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tvCheckoutTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Driver Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDriverName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/label_driver_name"
                app:boxStrokeColor="@color/primary_dark_blue"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tilCompanyName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDriverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Starting Mileage -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStartingMileage"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/label_starting_mileage"
                app:boxStrokeColor="@color/primary_dark_blue"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tilDriverName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartingMileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Checkout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckoutVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_checkout_vehicle"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tilStartingMileage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Checkin Form (Initially Hidden) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCheckinForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llRegInputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCheckinTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_checkin_title"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Return Driver -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilReturnDriver"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/label_driver_name"
                app:boxStrokeColor="@color/primary_dark_blue"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tvCheckinTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReturnDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Return Mileage -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilReturnMileage"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/label_return_mileage"
                app:boxStrokeColor="@color/primary_dark_blue"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/tilReturnDriver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReturnMileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Checkin Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckinVehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_checkin_vehicle"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tilReturnMileage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
