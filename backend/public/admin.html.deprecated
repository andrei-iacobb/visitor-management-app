<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Visitor Management</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <!-- Login Screen -->
    <div id="loginScreen" class="screen active">
        <div class="login-container">
            <h1>üîê Admin Dashboard</h1>
            <p class="subtitle">Visitor Management System</p>
            <div class="login-form">
                <input type="password" id="passwordInput" placeholder="Enter admin password" autocomplete="off">
                <button onclick="login()" class="btn-primary">Login</button>
                <p id="loginError" class="error-message"></p>
            </div>
        </div>
    </div>

    <!-- Dashboard Screen -->
    <div id="dashboardScreen" class="screen">
        <!-- Header -->
        <header class="dashboard-header">
            <h1>üìä Admin Dashboard</h1>
            <div class="header-actions">
                <button class="btn-refresh" id="btnRefresh">üîÑ Refresh</button>
                <button class="btn-logout" id="btnLogout">Logout</button>
            </div>
        </header>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-btn active" data-tab="active">Active Visitors</button>
            <button class="tab-btn" data-tab="logs">All Logs</button>
            <button class="tab-btn" data-tab="contractors">Contractors</button>
            <button class="tab-btn" data-tab="sharepoint">SharePoint</button>
        </div>

        <!-- Active Visitors Tab -->
        <div id="activeTab" class="tab-content active">
            <div class="stats-container">
                <div class="stat-card">
                    <h3 id="activeCount">0</h3>
                    <p>Active Visitors</p>
                </div>
                <div class="stat-card">
                    <h3 id="visitorCount">0</h3>
                    <p>Visitors</p>
                </div>
                <div class="stat-card">
                    <h3 id="contractorCount">0</h3>
                    <p>Contractors</p>
                </div>
            </div>

            <div class="table-container">
                <table id="activeVisitorsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Company</th>
                            <th>Visiting</th>
                            <th>Sign-In Time</th>
                            <th>Duration</th>
                            <th>Purpose</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="activeVisitorsBody">
                        <!-- Data loaded dynamically -->
                    </tbody>
                </table>
                <p id="activeEmpty" class="empty-message" style="display:none;">No active visitors</p>
            </div>
        </div>

        <!-- All Logs Tab -->
        <div id="logsTab" class="tab-content">
            <div class="filters">
                <button class="filter-btn active" data-filter="all">All</button>
                <button class="filter-btn" data-filter="signed_in">Signed In</button>
                <button class="filter-btn" data-filter="signed_out">Signed Out</button>
                <button class="filter-btn" data-filter="today">Today</button>
            </div>

            <div class="table-container">
                <table id="logsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Company</th>
                            <th>Phone</th>
                            <th>Visiting</th>
                            <th>Sign-In</th>
                            <th>Sign-Out</th>
                        </tr>
                    </thead>
                    <tbody id="logsBody">
                        <!-- Data loaded dynamically -->
                    </tbody>
                </table>
                <p id="logsEmpty" class="empty-message" style="display:none;">No records found</p>
            </div>
        </div>

        <!-- Contractors Tab -->
        <div id="contractorsTab" class="tab-content">
            <div class="contractors-container">
                <!-- Add Contractor Form -->
                <div class="form-card">
                    <h2>‚ûï Add New Contractor</h2>
                    <form id="addContractorForm" onsubmit="submitAddContractor(event)">
                        <div class="form-group">
                            <label for="companyName">Company Name *</label>
                            <input type="text" id="companyName" required placeholder="e.g., ABC Electrical">
                        </div>
                        <div class="form-group">
                            <label for="contractorName">Contractor Name</label>
                            <input type="text" id="contractorName" placeholder="e.g., John Doe">
                        </div>
                        <div class="form-group">
                            <label for="contractorEmail">Email</label>
                            <input type="email" id="contractorEmail" placeholder="john@abcelectrical.com">
                        </div>
                        <div class="form-group">
                            <label for="contractorPhone">Phone Number</label>
                            <input type="tel" id="contractorPhone" placeholder="555-0101">
                        </div>
                        <div class="form-group">
                            <label for="contractorStatus">Status *</label>
                            <select id="contractorStatus" required>
                                <option value="approved">Approved</option>
                                <option value="pending">Pending</option>
                                <option value="denied">Denied</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="contractorNotes">Notes</label>
                            <textarea id="contractorNotes" placeholder="e.g., Regular HVAC contractor" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn-primary btn-large">Add Contractor</button>
                        <p id="formMessage" class="form-message"></p>
                    </form>
                </div>

                <!-- Contractors List -->
                <div class="list-card">
                    <div class="list-header">
                        <h2>Approved Contractors</h2>
                        <div class="list-controls">
                            <input type="text" id="contractorSearchInput" placeholder="Search contractors..." class="search-box">
                            <button onclick="loadContractors()" class="btn-secondary">üîÑ Refresh</button>
                        </div>
                    </div>

                    <div class="table-container">
                        <table id="contractorsTable">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Contractor</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                    <th>Approval Date</th>
                                    <th>Notes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="contractorsBody">
                                <!-- Data loaded dynamically -->
                            </tbody>
                        </table>
                        <p id="contractorsEmpty" class="empty-message" style="display:none;">No contractors found</p>
                    </div>
                </div>

                <!-- Unauthorized Attempts Log -->
                <div class="list-card">
                    <h2>üö´ Unauthorized Sign-In Attempts</h2>
                    <div class="table-container">
                        <table id="unauthorizedAttemptsTable">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Contractor</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Reason</th>
                                    <th>Attempt Time</th>
                                </tr>
                            </thead>
                            <tbody id="unauthorizedAttemptsBody">
                                <!-- Data loaded dynamically -->
                            </tbody>
                        </table>
                        <p id="unauthorizedEmpty" class="empty-message" style="display:none;">No unauthorized attempts</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- SharePoint Tab -->
        <div id="sharepointTab" class="tab-content">
            <div class="sharepoint-container">
                <div class="sp-status-card">
                    <h2>SharePoint Status</h2>
                    <div class="status-indicator">
                        <span id="spStatusDot" class="status-dot offline"></span>
                        <span id="spStatusText">Not configured</span>
                    </div>
                    <p id="spLastSync">Last sync: Never</p>
                </div>

                <div class="sp-controls-card">
                    <h2>Sync Controls</h2>
                    <button onclick="syncToSharePoint()" class="btn-primary btn-large">
                        üì§ Sync to SharePoint Now
                    </button>
                    <button onclick="readFromSharePoint()" class="btn-secondary btn-large">
                        üì• Read from SharePoint
                    </button>
                    <div id="spProgress" class="progress-bar" style="display:none;">
                        <div class="progress-fill"></div>
                    </div>
                    <p id="spMessage" class="sp-message"></p>
                </div>

                <div class="sp-stats-card">
                    <h2>Statistics</h2>
                    <div class="stats-grid">
                        <div>
                            <h3 id="spTotalRecords">0</h3>
                            <p>Total Records</p>
                        </div>
                        <div>
                            <h3 id="spSyncedRecords">0</h3>
                            <p>Synced</p>
                        </div>
                        <div>
                            <h3 id="spUnsyncedRecords">0</h3>
                            <p>Unsynced</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/admin.js"></script>
</body>
</html>
